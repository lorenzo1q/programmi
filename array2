<script>
  let numeri = [];
  for (let i = 0; i < 100; i++) {
    let n = Math.floor(Math.random() * 201) - 100; 
    numeri.push(n);
  }
  let somma = 0;
  for (let n of numeri) {
    somma += n;
  }
  let media = somma / numeri.length;
  let maggiori50 = [];
  for (let n of numeri) {
    if (n > 50) {
      mag50.push(n);
    }
  }
</script>

